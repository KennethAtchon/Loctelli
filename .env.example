# ============================================
# Loctelli Docker Compose - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# This file is used by docker-compose.yml for service configuration

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=loctelli

# ============================================
# Application Debug Mode
# ============================================
# Set to "true" for development, "false" for production
DEBUG=true

# ============================================
# JWT Secrets
# ============================================
# JWT secret for token signing
# Generate a strong random string for production
JWT_SECRET=your-super-secret-jwt-key-change-in-production

REDIS_PASSWORD=redis_password

NODE_AUTH_TOKEN=00000

# JWT refresh token secret (optional)
# JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# ============================================
# Frontend Build Arguments
# ============================================
# Public API URL for frontend (build-time)
# NEXT_PUBLIC_API_URL=http://localhost:3000/api/proxy

# Public debug mode for frontend (build-time)
# NEXT_PUBLIC_DEBUG=true

# ============================================
# Notes
# ============================================
# - These variables are used by docker-compose.yml
# - Backend and frontend services also read from their own .env files
# - See backend-api/.env.example and frontend/.env.example for more details
# - Default admin password is set in backend-api/.env (DEFAULT_ADMIN_PASSWORD)
