# ============================================
# Loctelli Backend API - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================
# Application Configuration
# ============================================
PORT=8000
DEBUG=true
NODE_ENV=development

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/loctelli

# ============================================
# Redis Configuration
# ============================================
# Redis connection URL (preferred)
REDIS_URL=redis://localhost:6379

# OR use individual Redis settings:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ============================================
# JWT Authentication
# ============================================
# Secret key for JWT token signing (REQUIRED)
# Generate a strong random string for production
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Optional: JWT token expiration settings
# JWT_ACCESS_TOKEN_EXPIRATION=15m
# JWT_REFRESH_TOKEN_EXPIRATION=7d

# ============================================
# API Security
# ============================================
# API key for backend authentication (REQUIRED)
# Used for API key middleware authentication
API_KEY=your-api-key-here

# Encryption secret for sensitive data (API keys, etc.)
# Should be a 32+ character string
API_KEY_ENCRYPTION_SECRET=default-secret-key-32-characters!!

# Conversation encryption key (optional)
# CONVERSATION_ENCRYPTION_KEY=your-conversation-encryption-key

# ============================================
# Admin Configuration
# ============================================
# Admin authentication code (REQUIRED)
ADMIN_AUTH_CODE=your-admin-auth-code

# Default admin password (REQUIRED)
# Change this in production!
DEFAULT_ADMIN_PASSWORD=defaultAdmin123!CANTUNA

# ============================================
# CORS & Frontend
# ============================================
# Frontend URL for CORS configuration (optional)
# If not set, defaults to localhost:3000 and common variants
# FRONTEND_URL=http://localhost:3000

# ============================================
# OpenAI Configuration
# ============================================
# OpenAI API key for AI Receptionist (optional)
# OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# Twilio Configuration (SMS & Voice)
# ============================================
# Twilio Account SID (optional)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid

# Twilio Auth Token (optional)
# TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Twilio Phone Number (optional)
# TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# SMS Campaign Settings (Optional)
# ============================================
# SMS_RATE_LIMIT_PER_MINUTE=60
# SMS_MAX_BATCH_SIZE=100
# SMS_RETRY_ATTEMPTS=3

# ============================================
# Cloudflare R2 Storage (Optional)
# ============================================
# R2_ACCOUNT_ID=your-r2-account-id
# R2_ACCESS_KEY_ID=your-r2-access-key-id
# R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
# R2_BUCKET_NAME=your-r2-bucket-name
# R2_PUBLIC_URL=https://your-bucket.r2.dev
# R2_ENABLED=true

# ============================================
# Job Queue Settings (Optional)
# ============================================
# QUEUE_REMOVE_ON_SUCCESS=10
# QUEUE_REMOVE_ON_FAILURE=50
# QUEUE_DEFAULT_RETRIES=3
# QUEUE_MAX_CONCURRENCY=10

# ============================================
# Cache Settings (Optional)
# ============================================
# CACHE_TTL=180000
# CACHE_MAX_ITEMS=100

# ============================================
# Email Service (Optional)
# ============================================
# Postmark API key for email sending
# POSTMARK_API_KEY=your-postmark-api-key

# ============================================
# Legacy/Deprecated (Optional)
# ============================================
# GHL_API_KEY is deprecated - use Integration config instead
# GHL_API_KEY=your-ghl-api-key
